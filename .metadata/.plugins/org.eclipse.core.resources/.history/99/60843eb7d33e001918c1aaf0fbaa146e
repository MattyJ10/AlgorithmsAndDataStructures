
public class Board {
	
	char[][] board; 
	int moveCount = 0; 
	
	public Board() {
		this.board = new char[3][3]; 
		for (int i = 0; i < this.board.length; i++) {
			for (int j = 0; j < this.board[0].length; j++) {
				this.board[i][j] = '-'; 
			}
		}
	}
	
	public void addToken(int row, int col, char token) {
		if (row > this.board.length - 1 || row < 0) {
			System.out.println("Error, invalid row"); 
			return; 
		}
		if (col > this.board[0].length - 1 || col < 0) {
			System.out.println("Error, invalid column"); 
			return;
		}
		
		if (this.board[row][col] == '-') {
			this.board[row][col] = token; 
			moveCount++; 
		}
	}
	
	public void printBoard() {
		for (int i = 0; i < this.board.length; i++) {
			for (int j = 0; j < this.board[0].length; j++) {
				System.out.print(this.board[i][j]);
				if (j != this.board[0].length - 1) 
					System.out.print('|'); 
			}
			System.out.println(); 
		}
	}
	
	public boolean isFull() {
		if (this.moveCount == 9) {
			return true; 
		} else {
			return false; 
		}
	}
	
	public void AIMove() {
		if (isFull()) {
			//throw exception
		} else {
			for (int i = 0; i < this.board.length; i++) {
				for (int j = 0; j < this.board[0].length; j++) {
					if (this.board[i][j] == '-') 
						
				}
			}
		}
	}

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		Board b = new Board(); 
		b.printBoard();
		b.addToken(0, 1, 'X');
		b.addToken(2, 2, 'O');
		b.printBoard();
	}

}
